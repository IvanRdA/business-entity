    class="justify-start"
    href="/dashboard"
    ><img
      class="w-[150px] md:ml-4"
      src="logo.png"
    /></a
  >
  <ul class="flex gap-6 text-center m-auto text-xs md:text-[14px]">
    <li>
      <a
        class="hover:text-[--mainRed] hover:bg-[--whiteColor]"
        href="/tiendas"
        >Tiendas</a
      >
    </li>
    <li>
      <a
        class="hover:text-[--mainRed] hover:bg-[--whiteColor]"
        href="/trabajadores"
        >Trabajadores</a
      >
    </li>
    <li>
      <a
        class="hover:text-[--mainRed] hover:bg-[--whiteColor]"
        href="/horarios"
        >Horarios</a
      >
    </li>
    <li>
      <a
        class="hover:text-[--mainRed] hover:bg-[--whiteColor]"
        href="/ventas"
        >Ventas</a
      >
    </li>
    <li>
      <a
        class="hover:text-[--mainRed] hover:bg-[--whiteColor]"
        href="/encargos"
        >Clientes</a
      >
    </li>
    <li>
      <a
        class="hover:text-[--mainRed] hover:bg-[--whiteColor]"
        href="/encargos"
        >Encargos</a
      >
    </li>
    <li>
      <a
        class="hover:text-[--mainRed] hover:bg-[--whiteColor]"
        href="/proveedores"
        >Proveedores</a
      >
    </li>
    <li>
      <a
        class="hover:text-[--mainRed] hover:bg-[--whiteColor]"
        href="/compras"
        >Compras</a
      >
    </li>
    <li>
      <a
        class="hover:text-[--mainRed] hover:bg-[--whiteColor]"
        href="/productos"
        >Escandallos</a
      >
    </li>
  </ul>

  <div class="flex">
    <a
      href="#"
      class="hover:scale-110 ease-in-out duration-200"
      ><Settings /></a
    >
    <a
      href="#"
      class="hover:scale-110 ease-in-out duration-200"
      ><Logout /></a
    >
  </div>

  <style>
    a {
      padding: 5px;
      margin: 2px;
    }
  </style>
